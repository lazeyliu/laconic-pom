<idea-plugin>
    <id>ris58h.lacopom</id>
    <name>Laconic POM for Maven</name>
    <vendor email="ris58h@gmail.com" url="https://github.com/ris58h">Ilya Rodionov</vendor>

    <description><![CDATA[
    Folds Maven boilerplate in pom.xml files.
    ]]></description>

    <idea-version since-build="192.2840" />

    <depends>com.intellij.modules.platform</depends>
    <depends>org.jetbrains.idea.maven</depends>

    <extensions defaultExtensionNs="com.intellij">
        <lang.foldingBuilder language="XML" order="first" implementationClass="ris58h.lacopom.PomFoldingBuilder"/>
    </extensions>
</idea-plugin>
